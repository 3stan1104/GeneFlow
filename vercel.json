{
    "version": 2,
    "framework": "vite",
    "functions": {
        "api/**/*.js": {
            "memory": 512,
            "maxDuration": 30
        }
    },
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/$1"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}